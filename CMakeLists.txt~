
cmake_minimum_required(VERSION 3.21)
project(CHARLIE C)

set(CMAKE_RUNTIME_OUTPUT_DIRECTORY ${CMAKE_BINARY_DIR}/bin)
add_executable(charlie)

file(GLOB_RECURSE SRC_FILES CONFIGURE_DEPENDS
	${CMAKE_SOURCE_DIR}/*.c
)

target_sources(charlie PRIVATE ${CMAKE_SOURCE_DIR}/core/main.c ${SRC_FILES})
target_compile_options(bug PRIVATE -Wall -Werror -Wextra -pedantic) # I like to torture myself
